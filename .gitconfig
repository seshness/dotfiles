[core]
    editor = emacs
    pager = less
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
    eol = lf
    excludesfile = .gitignore

[commit]
    template = /Users/seshadri/.emacs.d/languages/git-commit-template.txt

[user]
    name = Seshadri Mahalingam
    email = seshadri@berkeley.edu

[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = true
    pager = true

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[alias]
    br = branch
    co = checkout
    st = status
    ci = commit
    ca = commit -a
    amend = commit --amend
    ri = rebase --interactive --autosquash
    ac = commit --amend -C HEAD -a
    pr = pull --rebase

    w = whatchanged
    l = log
    lp = log -p
    lt = log --topo-order
    gl = log --graph
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative

    com = checkout master

    d = diff
    dc = diff --cached
    ds = diff --stat
    dsc = diff --stat --cached
    sr = svn rebase
    sd = svn dcommit

    searchcommits = "!f() { query=\"$1\"; shift; git log -S\"$query\" \"$@\"; }; f \"$@\""
